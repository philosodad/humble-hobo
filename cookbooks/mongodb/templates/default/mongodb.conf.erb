#
# Dynamically generated by Chef for <%= node[:fqdn] %> - local modifications will be replaced
#

dbpath = <%= @database_path %>
#bind_ip = <%= @node[:mongodb][:bind_address] %>
port = <%= @port %>

logpath = <%= @log_path %>/mongodb.log
logappend = true

noauth = true

<% if  @replication_set &&  @replication_set.size > 0 %>
replSet = <%= @replication_set %>
<% end %>

rest = <%= @rest %>

<% if  @additional_settings &&  @additional_settings.size > 0 %>
  <% @additional_settings.each_pair do |k,v| %>
    <%= k %> = <%= v %>
  <% end %>
<% end %>